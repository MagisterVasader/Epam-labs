<!DOCTYPE web-app PUBLIC
        "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
        "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                      http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0"
         metadata-complete="true">

    <display-name>Web Application Booking</display-name>

    <servlet>
        <servlet-name>UserListServlet</servlet-name>
        <servlet-class>com.booking.controller.user.UserListServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>UserListServlet</servlet-name>
        <url-pattern>/user/list.html</url-pattern>
    </servlet-mapping>

    <listener>
        <listener-class>com.booking.controller.ApplicationStartListener</listener-class>
    </listener>

    <context-param>
        <param-name>jdbc-driver</param-name>
        <param-value>com.mysql.cj.jdbc.Driver</param-value>
    </context-param>

    <context-param>
        <param-name>jdbc-url</param-name>
        <param-value>jdbc:mysql://localhost:3306/web_app_epam?useUnicode=true&amp;useSSL=false&amp;allowPublicKeyRetrieval=true&amp;serverTimezone=</param-value>
    </context-param>

    <context-param>
        <param-name>jdbc-username</param-name>
        <param-value>root</param-value>
    </context-param>

    <context-param>
        <param-name>jdbc-password</param-name>
        <param-value>asaa220708</param-value>
    </context-param>

    <session-config>
        <session-timeout>30</session-timeout>
        <tracking-mode>COOKIE</tracking-mode>
    </session-config>

    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>
</web-app>
